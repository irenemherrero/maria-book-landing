---
import SectionLayout from './SectionLayout.astro';

const bookImages = [
  { src: '/mock-up3.jpg', alt: 'Hard cover book mockup' },
  { src: '/mock-up4.jpg', alt: 'Paperback book mockup' },
  { src: '/mock-up5.jpg', alt: 'Paperback book mockup' },
];
---

<SectionLayout>
  <div class="max-w-7xl mx-auto text-center">
    <div class="grid grid-cols-1 sm:grid-cols-2 sm:grid-cols-3 gap-8">
      {
        bookImages.map((image) => (
          <div
            class="overflow-hidden rounded-lg shadow-lg transform hover:scale-105 transition-all opacity-100"
            key={image.alt}
          >
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover"
            />
          </div>
        ))
      }
    </div>
  </div>
</SectionLayout>
